<div class="modal fade" id="hireConfModalCta" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
      <div class="modal-dialog" role="document">
        <div class="modal-content pt-1 mb-1">
          <div class="modal-header mt-1">
            <h6 class="mt-1 mb-1 text-center"> Booking Confirmation</h6>
            <button type="button" class="close pr-1" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
        <div class="form-container">
              <!--form action="#" class="contact-form form-validate" novalidate="novalidate"-->
                    
                    <span class="d-none" name="error" id="err"></span>
                    <div class="row mt-1">
                        <div class="col-lg-12 col-md-12 col-12">
                            <div class="form-group">
                            <span class="text-lg-center">Are you sure you want to hire <%= pro.firstName %> for this job ?</span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col d-flex justify-content-center mb-2">
                            <input type="button" onClick="hirePro('<%=pro._id %>', '<%=job._id%>')" data-dismiss="modal" name="submit" class="btn-job btn-primary-job" value="Yes, hire <%= pro.firstName %>">
                            <input type="button" data-dismiss="modal" name="cancel" class="btn-job btn-primary-job-inv-blue ml-3" value="Cancel">
                        </div>
                    </div>
                <!--/form-->
              </div>
  
          </div>
        </div>
      </div>
    </div>
    