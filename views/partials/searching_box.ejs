<div class="row d-flex justify-content-center">

    <div class="col searching">
        <form action="/find-services">
            <div class="card card-transp-bg p-4  py-2">

                <div class="row g-3 mt-2">

                    <div class="col-md-4">

                        <div class="dropdown dropdown-search">
                            <select class="form-control search-input-s" aria-label="Select Category" name="category" style="display: inline;">
                                <option selected>Select Category</option>
                                <% if(categories){ categories.forEach(cat=>{ %>
                                    <option value="<%=cat.name %>"><%=cat.name %></option>
                                <% });} %>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="input-group">
                            <input type="search" class="form-control search-input rounded " name="search" placeholder=" Keyword.. eg. Architect" aria-label="Search" aria-describedby="search-addon" />
                            <button type="submit" class="btn-outline-primary search-btn">search</button>
                        </div>
                        
                    </div>
                </div>
                <div class="mt-3">
    <div class="text-center">
        <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" class="advanced ">
            Advance Search With Filters <i class="fa fa-angle-down"></i>
            </a>
    </div>



    <div class="collapse" id="collapseExample">
    <div class="card card-body">

    <div class="row">

    <div class="col-md-4">

        <input type="text" placeholder="Price eg. $500" class="form-control">
        
    </div>


    <div class="col-md-4">

        <select class="form-control" id="country_search" name="country_search">
            <option selected>Country</option>
            <% countries.forEach(country => { %> 
                <option name="<%= country.name %>" value="<%= country.name %>"> <%= country.name %></option>
            <% }); %>
        </select>
        
    </div>
    

    <div class="col-md-4">

        <select class="form-control" aria-label="Select City"  style="display: inline;" id="city_search" name="city_search" >
            <option selected>Select City</option>
        </select>
        
    </div>
    
    </div>

    </div>
    </div>


                </div>    
            </div>
        </form>

    </div>
    
</div>

