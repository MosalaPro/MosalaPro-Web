
<%- include('partials/header') %>
<section class="bg-light p-4">
    <div class="container p-4">
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">Service requests</a></li>
                <li class="breadcrumb-item active" aria-current="page"><%=job.requestTitle%></li>
            </ol>
        </nav>
        <div class=" pt-1 mb-1">
            <div class="modal-header mt-1">
                <h4 class="mt-1 mb-1 text-center">   <%=job.requestTitle%>  </h4>
                </div>
                        <div class="modal-container-job">
                            <input class="d-none" id="jobId" value="<%=job._id%>">
                            <input class="d-none" id="userName" value="<%=job.username%>">
                            <span id="mess" class="error_message"></span>
                            <div class="row border-bottom mt-1">
                                <div class="col">
                                    <h6>Category</h6><span class="job-details"><%=job.requestCategory %></span> 
                                </div>
                            </div>
                            <div class="row border-bottom mt-1">
                                <div class="col">
                                    <h6>Budget</h6> <span class="job-details">$ <%=job.budget%></span>
                                </div>
                            </div>

                            <div class="row border-bottom mt-1">
                                <div class="col">
                                    <h6>Deadline</h6><span class="job-details"><%=job.deadline%></span>
                                </div>
                            </div>

                            <div class="row border-bottom mt-1">
                                <div class="col p-2">
                                    <h6>Description</h6>
                                    <span class="job-details"><%=job.requestDescription%></span>
                                </div>
                            </div>
                            <h6 class="mt-2">Files</h6>
                            <div class="row border-bottom p-3 mt-1">
                                
                                    <% let j = 0; job.files.forEach(file=>{ j++; %>

                                    
                                    <div class="col-sm-4 col-lg-2 wow fadeInLeft" data-wow-delay=".2s">
                                    <!--span class="job-details"><%=job.files.length%></span-->
                                        <!-- Post Modern-->
                                        <a href="/postAttachements/<%=file%>" download="<%=file%>" class="d-flex justify-content-center px-4" >
                                            <b class="fa fa-file-text-o fa-5x mb-1 file-icon" aria-hidden="true"></b>
                                            <p class="post-modern-time"><%=job.requestTitle%>'s file <%=j%></a></p>
                                        </a>
                                        
                                      </div>

                                    <% }) %>
                                </div>
                                <p class="post-modern-text mt-1 ">Please read the documents carefully to make sure to meet the requirements of this request.</p>
                            </div>
                            <div class="p-4 d-flex justify-content-center"><button class="btn-job btn-primary-job" onClick="applyForJob()">Apply for service request</button></div>
                </div>
            </div>
</section>

<script src="js/jobApplication.js"></script>
<%- include('partials/footer') %>